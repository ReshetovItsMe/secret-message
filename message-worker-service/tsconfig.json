{
  "compilerOptions": {
    "rootDir": ".",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "paths": {
      "@enums/*": ["./src/enums/*"],
      "@libs/*": ["./src/libs/*"]
    }
  },
  "include": ["src/**/*.ts", "handler.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
