    "scripts": {
        "prebuild": "rimraf dist",
        "build": "tsc",
        "build:proto": "rimraf ../proto/generated/* && sh ./scripts/build-protos.sh",
        "prettier:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "start:tsc": "tsc --watch -p .",
        "start:dev": "nodemon -e js -w dist dist/index.js",
        "dev": "npm run start:tsc && start:dev",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.7.3",
        "@hapi/hapi": "^20.2.2",
        "google-protobuf": "^3.21.2",
        "hapi-pino": "^11.0.1",
        "ioredis": "^5.2.3",
        "pino": "^8.7.0",
        "pino-pretty": "^9.1.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/google-protobuf": "^3.15.6",
        "@types/hapi__hapi": "^20.0.13",
        "@types/jest": "^29.5.1",
        "@types/node": "^20.1.5",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.13.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "grpc-tools": "^1.11.3",
        "jest": "^29.5.0",
        "nodemon": "^2.0.20",
        "prettier": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "ts-protoc-gen": "^0.15.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "^5.0.4"
    }
